<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">kaelyx_cspentry_form.kaelyx_cspentry_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">CSP Entry Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Kaelyx\ConfigurableCSP\Block\Adminhtml\CspEntry\Edit\BackButton"/>
            <button name="delete" class="Kaelyx\ConfigurableCSP\Block\Adminhtml\CspEntry\Edit\DeleteButton"/>
            <button name="save" class="Kaelyx\ConfigurableCSP\Block\Adminhtml\CspEntry\Edit\SaveButton"/>
            <button name="save_and_continue" class="Kaelyx\ConfigurableCSP\Block\Adminhtml\CspEntry\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>kaelyx_cspentry_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>kaelyx_cspentry_form.kaelyx_cspentry_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="kaelyx_cspentry_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="kaelyx/cspentry/save"/>
        </settings>
        <dataProvider class="Kaelyx\ConfigurableCSP\Model\CspEntryDataProvider" name="kaelyx_cspentry_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">cspentry</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="directive" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">cspentry</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">CSP Entry</label>
                <dataScope>directive</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Kaelyx\ConfigurableCSP\Ui\Component\Listing\Column\CspEntryOptions"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="value" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">cspentry</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Value</label>
                <dataScope>value</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
